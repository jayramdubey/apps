<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        tools:context="com.example.cg_dte.smart_study.MainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:id="@+id/textView"
                android:textSize="25dp"
                android:textColor="@android:color/holo_green_light"
                android:layout_gravity="center_horizontal" />


            <ImageView
                android:id="@+id/imgV"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_above="@+id/button1"
                android:layout_alignParentTop="true"
                android:src="@drawable/cam" >
            </ImageView>

            <Button
                android:id="@+id/photoButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Click" >
            </Button>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:id="@+id/textView2" />

                <EditText

                    android:inputType="textPersonName"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtName" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Mob."
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:maxLength="10"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtMob"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Email."
                    android:id="@+id/textView5"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtEmail"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:text="Gen." />

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:id="@+id/rdoBtnM"
                        android:checked="true" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="F"
                        android:id="@+id/rdoBtnF"
                        android:checked="false" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Add."
                    android:id="@+id/textView6" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtAdd"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Usr_Id"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:id="@+id/textView0" />

                <EditText
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtUsrId" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Passw"
                    android:id="@+id/textVie"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtPass"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="Cn_Pass"
                    android:id="@+id/textVie1"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtCPass"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:textAppearance="@android:style/Animation.Dialog"
                    android:textSize="@android:dimen/app_icon_size"
                    android:background="@android:color/holo_green_light"
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/BtnOK"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
